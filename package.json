{
  "name": "eeusr-childcare-management",
  "version": "1.0.0",
  "description": "Web and Android-based Childhood Care Management System for Ethiopian Electric Utility Southern Region",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed": "ts-node src/scripts/seedAdmin.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "childcare",
    "management",
    "nodejs",
    "typescript"
  ],
  "author": "Wolaita Sodo University CS Students",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@types/cors": "^2.8.17",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}

